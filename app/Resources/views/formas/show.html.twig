{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - forma
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View forma <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ forma.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ forma.nombre }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Descripcion</strong></p>
        <p>
            {{ forma.descripcion }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fecha</strong></p>
        <p>
            {% if forma.fecha %}{{ forma.fecha|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Activo</strong></p>
        <p>
            {{ forma.activo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Brochure</strong></p>
        <p>
            {{ forma.brochure }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('formas') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('formas_edit', { 'id':  forma.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('formas_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('formas_delete', { 'id': forma.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

