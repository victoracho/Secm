{% extends 'PetkoparaCrudGeneratorBundle::base.html.twig' %}

{% block title %}
{{ parent() }} - biblioteca
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View biblioteca <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ biblioteca.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ biblioteca.nombre }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Descripcion</strong></p>
        <p>
            {{ biblioteca.descripcion }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fecha</strong></p>
        <p>
            {% if biblioteca.fecha %}{{ biblioteca.fecha|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Activo</strong></p>
        <p>
            {{ biblioteca.activo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Brochure</strong></p>
        <p>
            {{ biblioteca.brochure }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('biblioteca') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('biblioteca_edit', { 'id':  biblioteca.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('biblioteca_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('biblioteca_delete', { 'id': biblioteca.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

