{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - Nuevo Tipo de Requerimiento
{% endblock %}

{% block page_content %}


<div class="row">
    <!-- left column -->
    <div class="col-md-9">



        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Nuevo Tipo de Requerimiento<span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h3>
                <br>
                <br>
                <span style="font-size: 12px" class="text-danger">*&nbsp;Campos Obligatorios</span>
                
            </div>



            <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }} ">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

            {{ form_start(form) }}
        
            <div class="box-body">
          {#{ form_widget(form) }#}

              <div class="row">
               <div class="col-md-9"><label><span class="text-danger">*&nbsp;</span>Nombre</label>{{form_widget(form.nombre, { 'attr': {'class': 'solo-numero-letra'} } )}}</div>
              </div>

               {{ form_errors(form.nombre) }}
              <br>
              
              <div class="row">
               <div class="col-md-9"><label>Descripci&oacute;n</label>{{ form_widget(form.descripcion, { 'attr': {'class': 'solo-letra'} }) }}</div>
              </div>
              
              <br>
              <div class="row">
               <div class="col-md-9"><label><span class="text-danger">*&nbsp;</span>Estatus</label>{{ form_widget(form.status) }}</div>
              </div>

              <br>

               </div>
               <br>
            <div class="box-footer">
                <button type="submit" name="submit" value="save" class="btn btn-success"> 
                    Guardar <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                </button>
                <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
                    Guardar y Agregar <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
            </div>


            {{ form_end(form) }}

            <hr/>
                        
<div class="form-group">
    <a class="btn btn-default" href="{{ path('tipocaso') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Volver al listado
    </a>
</div>

        </div>

    </div>
</div>


{% endblock %}

{% block javascripts_inline %}

    {{ parent() }}
    <script src="/bundles/organizaciones/js/validaciones.js"></script>
    
{%endblock%}
