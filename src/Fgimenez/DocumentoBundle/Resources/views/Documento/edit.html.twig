{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - Editar documento
{% endblock %}

{% block page_content %}


    <div class="row">
        <!-- left column -->
        <div class="col-md-9">



            <div class="box box-warning">
                <div class="box-header with-border">
                    <h3 class="box-title">Editar documento <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h3>
                </div>



                <div class="row">
                    <div class="col-md-12">
                        {% for type, flashMessages in app.session.flashbag.all() %} 
                            {% for flashMessage in flashMessages %}
                                <div class="alert alert-{{ type }}">
                                    {{ flashMessage|raw }}
                                </div>
                            {% endfor %} 
                        {% endfor %} 
                    </div>
                </div>


                {{ form_start(edit_form) }}
                <div class="box-body">
                    {{ form_widget(edit_form) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Guardar
                    </button>
                </div>
                {{ form_end(edit_form) }}

                <hr/>


                <div class="form-group">
                    <a class="btn btn-default" href="{{ path('documento_crud') }}">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                        Volver al listado
                    </a>
                    <a class="btn btn-info" href="{{ path('documento_crud_new') }}">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        Nuevo
                    </a>
                    <form action="{{ path('documento_crud_delete', { 'id': documento.id }) }}" method="post" style="display: inline-block">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            Eliminar
                        </button>
                    </form>
                </div>

            </div>

        </div>
    </div>


{% endblock %}

