{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - documento
{% endblock %}

{% block page_content %}





    <div class="row">
        <div class="col-md-9">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Mostrar documento <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">                 
                        <tr>
                            <td><strong>Id</strong></td>
                            <td> 
                                {{ documento.id }}
                            </td>                     
                        </tr>                    <tr>
                            <td><strong>Idtipodocumento</strong></td>
                            <td> 
                                {{ documento.idTipoDocumento }}
                            </td>                     
                        </tr>         
                        <tr>
                            <td><strong>Ruta</strong></td>
                            <td> 
                                {{ documento.ruta }}
                            </td>                     
                        </tr>            
                        <tr>
                            <td><strong>Resumen</strong></td>
                            <td> 
                                {{ documento.resumen }}
                            </td>                     
                        </tr>    
                        <tr>
                            <td><strong>Status</strong></td>
                            <td> 
                                {% if documento.status %}Yes{% else %}No{% endif %}
                            </td>                     
                        </tr>        
                        <tr>
                            <td><strong>Acceso</strong></td>
                            <td> 
                                {{ documento.acceso }}
                            </td>                     
                        </tr>                </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>



    <hr/>


    <div class="form-group">
        <a class="btn btn-default" href="{{ path('documento_crud') }}">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            Volver al listado
        </a>
        <a class="btn btn-primary" href="{{ path('documento_crud_edit', { 'id':  documento.id }) }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Editar
        </a>
        <a class="btn btn-info" href="{{ path('documento_crud_new') }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Nuevo
        </a>
        <form action="{{ path('documento_crud_delete', { 'id': documento.id }) }}" method="post" style="display: inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                Eliminar
            </button>
        </form>
    </div>


{% endblock %}
