{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - Editar Tipo Soporte
{% endblock %}

{% block page_content %}


<div class="row">
    <!-- left column -->
    <div class="col-md-9">



        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">Editar Tipo Soporte <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h3>
                <br>
                <br>
                <span style="font-size: 12px" class="text-danger">*&nbsp;Campos Obligatorios</span>
                
                
            
            </div>



            <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

             {{ form_start(edit_form) }}
           
            
            <div class="box-body">
                {#{ form_widget(edit_form) }#}

                <div class="row">
                    <div class="col-md-9"><label><span class="text-danger">*&nbsp;</span>Nombre</label>{{form_widget(edit_form.nombre, { 'attr': {'class': 'solo-numero-letra'} } )}}</div>
                </div>

                {{ form_errors(edit_form.nombre) }}
                <br>

                <div class="row">
                    <div class="col-md-9"><label>Descripci&oacute;n</label>{{ form_widget(edit_form.descripcion) }}</div>
                </div>

                <br>
                <div class="row">
                    <div class="col-md-9"><label><span class="text-danger">*&nbsp;</span>Estatus</label>{{ form_widget(edit_form.status) }}</div>
                </div>

                <br>

            </div>
            
            
            
            
            
            
            
            <div class="box-footer">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Guardar
                </button>
            </div>
            {{ form_end(edit_form) }}

            <hr/>

                        
<div class="form-group">
    <a class="btn btn-default" href="{{ path('tipodocumento') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Volver al listado
    </a>
    <a class="btn btn-info" href="{{ path('tipodocumento_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nuevo
    </a>
