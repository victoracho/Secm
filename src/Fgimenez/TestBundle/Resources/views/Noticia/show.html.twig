{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - noticium
{% endblock %}

{% block page_content %}





<div class="row">
    <div class="col-md-9">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Mostrar noticium <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">                    <tr>
                        <td><strong>Id</strong></td>
                        <td> 
                                                            {{ noticium.id }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Titulo</strong></td>
                        <td> 
                                                            {{ noticium.titulo }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Antetitulo</strong></td>
                        <td> 
                                                            {{ noticium.antetitulo }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Resumen</strong></td>
                        <td> 
                                                            {{ noticium.resumen }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Contenido</strong></td>
                        <td> 
                                                            {{ noticium.contenido }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Fecha</strong></td>
                        <td> 
                                                            {% if noticium.fecha %}{{ noticium.fecha|date('Y-m-d') }}{% endif %}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Slug</strong></td>
                        <td> 
                                                            {{ noticium.slug }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Imagen</strong></td>
                        <td> 
                                                            {{ noticium.imagen }}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Publicado</strong></td>
                        <td> 
                                                            {% if noticium.publicado %}Yes{% else %}No{% endif %}
                                                    </td>                     
                    </tr>                    <tr>
                        <td><strong>Categoria_id</strong></td>
                        <td> 
                                                            {{ noticium.categoriaid }}
                                                    </td>                     
                    </tr>                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>



<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('noticia_crud') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Volver al listado
    </a>
    <a class="btn btn-primary" href="{{ path('noticia_crud_edit', { 'id':  noticium.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Editar
    </a>
    <a class="btn btn-info" href="{{ path('noticia_crud_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nuevo
    </a>
    <form action="{{ path('noticia_crud_delete', { 'id': noticium.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
    </form>
</div>


{% endblock %}
