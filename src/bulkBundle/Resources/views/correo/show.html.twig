{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} - correo
{% endblock %}

{% block page_content %}





<div class="row">
    <div class="col-md-9">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Mostrar correo <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">                    <tr>
                        <td><strong>Id</strong></td>
                        <td>
                                                            {{ correo.id }}
                                                    </td>
                    </tr>                    <tr>
                        <td><strong>Fecha</strong></td>
                        <td>
                                                            {% if correo.fecha %}{{ correo.fecha|date('Y-m-d H:i:s') }}{% endif %}
                                                    </td>
                    </tr>                    <tr>
                        <td><strong>Fechaedicion</strong></td>
                        <td>
                                                            {{ correo.fechaEdicion }}
                                                    </td>
                    </tr>                </table>
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>



<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('correo') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Volver al listado
    </a>
    <a class="btn btn-primary" href="{{ path('correo_edit', { 'id':  correo.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Editar
    </a>
    <a class="btn btn-info" href="{{ path('correo_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nuevo
    </a>
    <form action="{{ path('correo_delete', { 'id': correo.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Eliminar
        </button>
    </form>
</div>


{% endblock %}
